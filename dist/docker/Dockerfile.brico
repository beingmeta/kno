FROM kno:base
MAINTAINER repoman@beingmeta.com
RUN apt-get -yqq update && apt-get -yqq full-upgrade && \
    apt-get -yqq install kno-imagetools kno-full && \
    apt-get -yqq install libapache2-mod-knocgi && \
    apt-get autoclean && apt-get clean
WORKDIR /data
ADD https://kno.s3.amazonaws.com/brico/latest/brico.tar.bz2 .
ADD https://kno.s3.amazonaws.com/brico/latest/wikid.tar.bz2 .
RUN tar -xf brico.tar.bz2 && tar -xf wikid.tar.bz2; wait; rm *.tar.bz2

