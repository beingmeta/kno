FROM kno:base
MAINTAINER repoman@beingmeta.com
ENV TERM=linux
RUN echo 'debconf debconf/frontend select Noninteractive' | debconf-set-selections
RUN apt-get -yqq update && apt-get -yqq full-upgrade && apt-get -yqq install apache2 libapache2-mod-knocgi && \
    a2enmod ssl rewrite status proxy proxy_http info headers knocgi alias auth_basic auth_digest mime
