pkgname=kno
pkgver=@KNO_MAJOR@.@KNO_MINOR@.@KNO_RELEASE@
pkgrel=@KNO_PATCHLEVEL@
pkgdesc="Library and applications for symbolic computing at scale"
url="https://kno.so/"
arch="all"
license="GPLV3"
depends="libu8 libressl ldns"
makedepends="ldns-dev libressl-dev libuuid libc-dev alpine-sdk snappy-dev curl-dev"
install=""
subpackages=""
#subpackages="$pkgname-dev $pkgname-doc $pkgname-static"
#depends_dev="$pkgname"
#depends_doc="$pkgname"
source="kno-@KNO_VERSION@.tar"
builddir="${srcdir}/kno"

build() {
	echo "@build pwd=$(pwd) startdir=${startdir} srcdir=${srcdir} pkgdir=${pkgdir} builddir=${builddir}"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--enable-stripping \
		--without-parseltongue \
		--localstatedir=/var \
		--without-sudo
	make -j
}

check() {
	echo "@check pwd=$(pwd) startdir=${startdir} srcdir=${srcdir} pkgdir=${pkgdir} builddir=${builddir}"
	make
}

package() {
	echo "@package pwd=$(pwd) startdir=${startdir} srcdir=${srcdir} pkgdir=${pkgdir} builddir=${builddir}"
        make DESTDIR="$pkgdir" SUDO= install
}
