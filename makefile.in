$(LIBINSTALLDIR)/%@suffix@.@vshared_suffix@: ${LIBSOURCE}/%@suffix@.@shared_suffix@
	@echo Installing $@ from $<
	@$(SYSINSTALL) -d $(@D)
	@$(SYSINSTALL) $< $@
