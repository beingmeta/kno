	@make staging/kno-@KNO_VERSION@ staging/kno-@KNO_VERSION@.tar.gz
	@buildrpm@ $(RPMFLAGS)  			\
	   --define="_rpmdir $(RPMDIR)"			\
	   --define="_srcrpmdir $(RPMDIR)" 		\
	   --nodeps -ta 				\
	    staging/kno-@KNO_VERSION@.tar.gz && 	\
