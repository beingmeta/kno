# Rules for Debian building

dist/debs.built: REVISION FULL_REVISION $(KNO_SOURCES) $(CMODULE_SOURCES) $(KNO_HEADERS)
	@if test ! -f staging/setup.debian.core; then \
	  echo "Warning: no staging/setup.debian"; fi;
	make staging/kno_@KNO_VERSION@ && 		\
	(cd staging/kno_@KNO_VERSION@; 			\
	 dpkg-buildpackage -sa -us -uc -b) && 		\
	 mv staging/*_@KNO_VERSION@-* dist &&	\
	 touch dist/debs.built;
# cp staging/kno_@KNO_VERSION@*.tar.?z dist &&	\

dist/debsource.built: staging/kno_@KNO_VERSION@
	(cd staging/kno_@KNO_VERSION@; 			\
	 dpkg-buildpackage -sa -us -uc -F) && 		\
	 cp staging/kno_@KNO_VERSION@*.tar.?z dist &&	\
	 mv staging/*_@KNO_VERSION@*.* dist &&		\
	touch dist/debs.built dist/debsource.built;

dist/debs.signed: dist/debs.built
	@(if test "${GPGID}" = "none" || test "${GPGID}" = ""; then	\
	    echo "Skipping GPG signing of debian packages";  \
	  else debsign -p${GPG} --re-sign -k${GPGID} dist/kno_@KNO_VERSION@*.changes; fi) && \
	 touch dist/debs.signed;
dist/debsource.signed: dist/debsource.built
	@(if test "${GPGID}" = "none" || test "${GPGID}" = ""; then	\
	    echo "Skipping GPG signing of debian packages";  	\
	  else debsign -p${GPG} --re-sign -k${GPGID} dist/kno_@KNO_VERSION@*.changes; fi) && \
	 touch dist/debs.signed dist/debsource.signed;

