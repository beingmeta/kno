# We can selectively link some executables statically to avoid 
# library dependencies with programs which will typically run as daemons
static/%@suffix@: src/exe/%.c $(LINK_STATIC_LIBS) ${REVISION_H} ${CONFIG_H}
	@echo MKEXE_STATIC $@
	$(CC) $(STATIC_CFLAGS) -o $@ $^ $(STATIC_LDFLAGS) -lu8stdio -lu8syslog $(LIBS) $(EXELIBS)
	@$(MSG) MKEXE_STATIC $@

lib/%@suffix@.a:
	@$(MKSTATIC) $@ $^
	@$(MSG) MKSTATIC $@
lib/%@suffix@.so.@KNO_MAJOR@: lib/%@suffix@.so
	@ln -sf $(*F).so $@
lib/lib%@suffix@.so:
	$(MKSO) -Wl,-soname=$(@F).@KNO_MAJOR@ -Wl,--as-needed -L./lib -L./ \
		-o $@ $^ -lu8 $(MODLIBS) $(XLIBS) $(LIBS)
	@ln -sf $(@F) $(@D)/$(@F).@KNO_MAJOR@
	@echo MKSO $@ $<
lib/lib%@suffix@.@KNO_MAJOR@.dylib: lib/%@suffix@.dylib
	@ln -sf $(*F).dylib $@
lib/lib%@suffix@.dylib:
	@$(MACLIBTOOL) -install_name \
		@rpath/lib/`basename $(@F) .dylib`.@KNO_MAJOR@.dylib \
		$(DYLIB_FLAGS) -o $@ $^
	@ln -sf $(@F) $(@D)/`basename $(@F) .dylib`.@KNO_MAJOR@.dylib
	@$(MSG) MACLIBTOOL $@

lib/stripped/%: lib/%
	@cp $< $@
	@strip $@

exe/stripped/%: exe/%
	@cp $< $@
	@strip $@

