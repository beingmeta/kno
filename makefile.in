	@chmod a+x $@
	@$(MSG) MAKESCRIPT $@ $<

exe/%@suffix@: src/exe/%.c ${CONFIG_HDRS}
	$(CC) $(CFLAGS) $(LDFLAGS) $(EXECLDFLAGS)                  \
		-o $@ $<                                           \
		-lfddbserv@suffix@                 	 	   \
		@xdynamic_scheme_libs@                             \
		-ltexttools@suffix@ -lfdscheme@suffix@ \
		-lfddrivers@suffix@ -lfdstorage@suffix@ -lfdcore@suffix@ \
	        -lu8stdio $(LIBS) $(EXECLIBS)
	@$(MSG) MKEXE $@ $<

