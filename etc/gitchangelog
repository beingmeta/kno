PACKAGE=${1:-kno}
CODENAME=${2:-debian}
STATUS=${3:-stable}
URGENCY=medium
DATE=`date -R`
gitid=`git describe`
version=`git describe | sed -e "s/-g[0123456789ABCDEFabcdef]*$//" | sed -e "s/^${PACKAGE}-//"`
echo ${PACKAGE} \(${version}-${CODENAME}\) ${STATUS}\; urgency=${URGENCY}
echo
echo "  * ${gitid} point release"
echo
echo " -- Repository Manager <repoman@beingmeta.com>  ${DATE}"
echo
cat -
