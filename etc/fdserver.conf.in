instance $CTL
author "Ken Haase"
description "FramerD DType server"
chdir @config_dir@/daemons
expect daemon
console none
respawn

limit nofile 20000 20000
limit core unlimited unlimited
kill timeout 90 # wait 90s between SIGTERM and SIGKILL.

env LOGDIR=@logdir@/framerd
setuid @fdaemon@
setgid @admin_group@
exec @prefix@/bin/fdserver `readlink ${CTL}||echo ${CTL}` STATEDIR=@rundir@/framerd




