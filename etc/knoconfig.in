#!@SCRIPT_SHELL@
prefix=@prefix@
exec_prefix=@exec_prefix@
option=$1;
if test -z ${option}; then option="usage"; fi
case ${option} in
    help|usage)
	echo version "\t\t\t(Kno version)";
	echo major "\t\t\t\t(Kno major version number)";
	echo minor "\t\t\t\t(Kno minor version number)";
	echo release "\t\t\t(Kno release version number)";
	echo prefix "\t\t\t\t(Installation prefix for Kno)";
	echo execprefix "\t\t\t(Binary (executable) Installation prefix for Kno)";
	echo config "\t\t\t\t(Default config directory)";
	echo localconfig "\t\t\t(Local config directory)";
	echo sharedconfig "\t\t\t(Shared config directory)";
	echo cflags "\t\t\t\t(Compiler flags for building executables)";
	echo ldflags "\t\t\t(Linker flags for building libraries)";
	echo include "\t\t\t(Include directory for Kno)";
	echo libdir "\t\t\t\t(Directory where Kno libraries are installed)";
	echo deplibs "\t\t\t\t(Libraries which Kno is linked against)";
	echo libs "\t\t\t\t(Libraries refs for the Kno core)";
	echo bin "\t\t\t\t(Where Kno executables are installed)";
	echo libsuffix "\t\t\t(The suffix for shared objects)";
	echo loadpath "\t\t\t(The path used to search for source modules)";
	echo modulepath "\t\t\t(The path used to search for source modules)";
	echo stdlib_modules "\t\t(Where built-in Kno source modules live)";
	echo installed_modules|installmods "\t\t(Where installed source modules live)";
	echo local_modules|localmods "\t\t\t(Where locally installed source modules live)";
	echo cmodules "\t\t\t(Where compiled dynamic modules live)";
	echo webuser "\t\t\t(The name of the web content user account for this installation)";
	echo knodaemon "\t\t\t(The name of the knodaemon user account for this installation)";
	echo admin_group "\t\t\t(The name of the administrator account for this installation)";
	echo state "\t\t\t\t(Ephemeral state directory for Kno)";
	echo rundir "\t\t\t\t(Where ephemeral state is stored for Kno applications and services)";
	echo logdir "\t\t\t\t(Where persistent logs are stored for Kno applications and services)";
	echo etc "\t\t\t\t(The directory this installation uses for 'etc')";
	echo servlets "\t\t\t(Where Kno servlet configuration files are stored)";
	echo daemons "\t\t\t(Where Kno daemon control files are stored)";
	echo share "\t\t\t\t(Where shared kno configuration information is stored)";
	echo data "\t\t\t\t(Where Kno persistent application data are stored)";;
    version)
	echo "@KNO_VERSION@";;
    major)
	echo "@KNO_MAJOR@";;
    minor)
	echo "@KNO_MINOR@";;
    release)
	echo "@KNO_RELEASE@";;
    prefix)
	echo "@prefix@";;
    execprefix|exec_prefix)
	echo "@exec_prefix@";;
    config)
	echo "@config_dir@";;
    localconfig|local_config)
	echo "@local_config@";;
    sharedconfig|shared_config)
	echo "@shared_config@";;
    cflags)
	echo "@CFLAGS@";;
    ldflags)
	echo "@LDFLAGS@ @PTHREAD_LIBS@ ${XLDFLAGS}";;
    include)
	echo "@prefix@/include/kno";;
    lib)
	echo "@libdir@";;
    libs)
	echo "@LIBS@";;
    bin)
	echo "@exec_prefix@/bin";;
    libsuffix)
	echo "@shared_suffix@";;
    loadpath)
	echo "@default_module_path@";;
    modulepath)
	echo "@default_module_path@";;
    stdlib_modules)
	echo "@stdlib_module_dir@";;
    installed_modules|installmods)
	echo "@installed_module_dir@";;
    local_modules|localmods)
	echo "@local_module_dir@";;
    cmodules)
	echo "@libdir@/kno";;
    webuser)
	echo "@webuser@";;
    knodaemon)
	echo "@knodaemon@";;
    admin|admingroup|admin_group)
	echo "@admin_group@";;
    state)
	echo "@localstatedir@";;
    rundir)
	echo "@kno_rundir@";;
    logdir)
	echo "@kno_logdir@";;
    etc)
	echo "@config_dir@";;
    servlets)
	echo "@config_dir@/servlets/";;
    daemons)
	echo "@config_dir@/daemons/";;
    share)
	echo "@share_dir@";;
    data)
	echo "@data_dir@";;
    *)
	echo "don't recognize config setting $1";;
esac
