#!/bin/sh
prefix=@prefix@
case $1 in
    config)
	echo "@local_config@";;
    cflags)
	echo "@CFLAGS@";;
    include)
	echo "@prefix@/include/framerd";;
    state)
	echo "@localstatedir@";;
    lib)
	echo "@libdir@";;
    bin)
	echo "@exec_prefix@/bin";;
    modules)
	echo "@module_dir@";;
    safe)
	echo "@safe_module_dir@";;
    cmodules)
	echo "@libdir@/framerd";;
    etc)
	echo "@config_dir@";;
    servlets)
	echo "@config_dir@/servlets/";;
    daemons)
	echo "@config_dir@/daemons/";;
    data)
	echo "@data_dir@";;
    else)
	echo "don't recognize config setting $1";;
esac
