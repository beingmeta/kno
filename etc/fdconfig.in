#!/bin/sh
prefix=@prefix@
case $1 in
    version)
	echo "@FDVERSION@";;
    major)
	echo "@FDMAJOR@";;
    minor)
	echo "@FDMINOR@";;
    release)
	echo "@FDRELEASE@";;
    config)
	echo "@local_config@";;
    cflags)
	echo "@CFLAGS@";;
    include)
	echo "@prefix@/include/framerd";;
    state)
	echo "@localstatedir@";;
    lib)
	echo "@libdir@";;
    bin)
	echo "@exec_prefix@/bin";;
    loadpath)
	echo "@default_module_path@";;
    safeloadpath)
	echo "@default_safe_module_path@";;
    modulepath)
	echo "@default_module_path@";;
    safemodulepath)
	echo "@default_safe_module_path@";;
    builtin_modules)
	echo "@builtin_module_dir@";;
    builtin_safe_modules)
	echo "@safe_module_dir@";;
    shared_modules)
	echo "@shared_module_dir@";;
    shared_safe_modules)
	echo "@shared_safe_module_dir@";;
    installed_modules)
	echo "@installed_module_dir@";;
    installed_safe_modules)
	echo "@installed_safe_module_dir@";;
    local_modules)
	echo "@local_module_dir@";;
    local_safe_modules)
	echo "@local_safe_module_dir@";;
    cmodules)
	echo "@libdir@/framerd";;
    webuser)
	echo "@webuser@";;
    fdaemon)
	echo "@fdaemon@";;
    admin_group)
	echo "@admin_group@";;
    rundir)
	echo "@framerd_rundir@";;
    logdir)
	echo "@framerd_logdir@";;
    etc)
	echo "@config_dir@";;
    servlets)
	echo "@config_dir@/servlets/";;
    daemons)
	echo "@config_dir@/daemons/";;
    data)
	echo "@data_dir@";;
    *)
	echo "don't recognize config setting $1";;
esac
