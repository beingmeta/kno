OP=$1
RAWSCRIPT=fdstartall
if test "x${OP}" = "xstop"; then 
   RAWSCRIPT=fdstopall; 
elif test "x${OP}" = "xrestart"; then
     sudo fdrestart;
     exit;
fi 
if ! which systemctl 2>&1 > /dev/null; then
    echo "No systemctl";
elif test -f /lib/systemd/system/framerd.service; then
    echo "systemctl ${OP} framerd";
    sudo systemctl ${OP} framerd;
    exit;
elif test -f /usr/lib/systemd/system/framerd.service; then
    echo "systemctl ${OP} framerd";
    sudo systemctl stop framerd;
    exit;
else
    echo "No systemd FramerD configuration";
fi
if ! which initctl 2>&1 > /dev/null; then
    echo "No initcl";
elif test -f /etc/init/framerd.conf; then
    echo initctl ${OP} framerd;
    sudo initctl ${OP} framerd;
    exit;
else
    echo No upstart FramerD configuration;
fi
echo "Not dead yet"
if test -f /etc/init.d/framerd; then
    echo /etc/init.d/framerd ${OP};
    sudo /etc/init.d/framerd ${OP};
else
    echo ${RAWSCRIPT}
    ${RAWSCRIPT}
fi
