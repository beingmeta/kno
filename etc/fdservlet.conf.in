instance $SOCKET
author "Ken Haase"
description "FramerD servlet"
expect daemon
console none
respawn

limit nofile 20000 20000
limit core unlimited unlimited
kill timeout 90 # wait 90s between SIGTERM and SIGKILL.

setuid @webuser@
setgid @admin_group@
env LOGDIR=@logdir@/fdserv
export CONFIG
pre-start script
	  touch @rundir@/${SOCKET}.nospawn
end script
post-stop script
	  rm @rundir@/${SOCKET}.nospawn
end script
exec @prefix@/bin/fdservlet ${SOCKET} CONFIG=${CONFIG}
