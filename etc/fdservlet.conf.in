instance $SOCKET
author "Ken Haase"
description "Starts a FramerD servlet daemon"
expect daemon
console none
respawn

limit nofile 20000 20000
limit core unlimited unlimited
kill timeout 90 # wait 90s between SIGTERM and SIGKILL.

setuid @webuser@
setgid @admin_group@
env LOGDIR=@logdir@/fdserv
export PRELOAD
exec @prefix@/bin/fdservlet ${SOCKET} PRELOAD=${PRELOAD}
