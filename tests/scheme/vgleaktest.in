EXE=$1; shift;
echo "Running leak test for ${EXE} $1 +++";
FD_LOADPATH=../../src/scheme/%/module.scm:../../src/scheme/%.scm: \
 LD_LIBRARY_PATH=../../lib DYLD_LIBRARY_PATH=../../lib	\
 MEMCHECKING=yes LEAKCHECKING=yes HEAPCHECK=yes 	\
 exec valgrind --tool=memcheck --leak-check=full	\
      	       --num-callers=24			    	\
      ${EXE} $*						\
      	     INVALGRIND=yes MEMCHECKING=yes		\
	     DLOADPATH=../../lib/framerd		\
	     DLOAD:TRACE=yes 				\
	     SKIP_DOTLOAD=yes SHOWTIME=0.0		\
	     DISPLAYMAXELTS=36 DISPLAYMAXCHARS=1024
