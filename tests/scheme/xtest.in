#!/bin/sh

if test $# -eq 0; then
   echo "Usage: xtest <program> [args...]";
   exit;
fi

PROGNAME=$1; shift;
LOGFILE=$$.log
if test -x $PROGNAME; then
    PROGNAME=./${PROGNAME};
fi

if test ! -z ${PREAMBLE}; then
   echo "TEST: " ${PROGNAME} $*;
fi;

. ./runenv.sh

@test_env@ exec ${PROGNAME} $*


