# Index tests

indextest:
	@${header} "■■■■■■■■ Running index tests ${TESTBASE} ${RUNCONF}"
	@rm -rf *.edit.dtype ${TESTBASE}
	@${header} Build with the offsets cache off
	@${RUN} ${KNOX} tabletest.scm ${TESTBASE} ${TESTSIZE} ${RUNCONF} && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} ${RUNCONF}             && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} CACHELEVEL=2  ${RUNCONF} && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} CACHELEVEL=3  ${RUNCONF} && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} CONSINDEX=yes  ${RUNCONF} && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} ${RUNCONF} CACHELEVEL=2 CONSINDEX=yes && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} +${TESTBASE}.edit.dtype ${RUNCONF} && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} ?${TESTBASE}.edit.dtype ${RUNCONF}
	@${header} "■■■■■■■■ Finished index tests ${TESTBASE} ${RUNCONF}"

fileindextest:
	@${header} "■■■■■■■■ Running file index tests ${TESTBASE} ${RUNCONF}"
	@rm -rf *.edit.dtype ${TESTBASE}
	@${header} Build with the offsets cache off
	@${RUN} ${KNOX} tabletest.scm ${TESTBASE} ${TESTSIZE} ${RUNCONF} && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} ${RUNCONF}             && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} CACHELEVEL=2  ${RUNCONF} && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} CACHELEVEL=3  ${RUNCONF} && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} CONSINDEX=yes  ${RUNCONF} && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} ${RUNCONF} CACHELEVEL=2 CONSINDEX=yes && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} +${TESTBASE}.edit.dtype ${RUNCONF} && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} ?${TESTBASE}.edit.dtype ${RUNCONF} && \
	rm ${TESTBASE}
	@${header} Build with the offsets cache on
	@${RUN} ${KNOX} tabletest.scm ${TESTBASE} ${TESTSIZE} CACHELEVEL=2 ${RUNCONF} && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} CACHELEVEL=2 ${RUNCONF} && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} +${TESTBASE}.edit.dtype ${RUNCONF} && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} ?${TESTBASE}.edit.dtype ${RUNCONF} && \
	rm ${TESTBASE}
	@${header} Build and edit with the offsets cache on
	@${RUN} ${KNOX} tabletest.scm ${TESTBASE} ${TESTSIZE} CACHELEVEL=2 ${RUNCONF} && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} CACHELEVEL=2 ${RUNCONF} && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} +${TESTBASE}.edit.dtype ${RUNCONF} CACHELEVEL=2 && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} ?${TESTBASE}.edit.dtype ${RUNCONF} CACHELEVEL=2 && \
	rm ${TESTBASE}
	@${header} Build and edit with the offsets cache and memorymapping on
	@${RUN} ${KNOX} tabletest.scm ${TESTBASE} ${TESTSIZE} CACHELEVEL=3 ${RUNCONF} && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} CACHELEVEL=3 ${RUNCONF} && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} +${TESTBASE}.edit.dtype ${RUNCONF} CACHELEVEL=3 && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} ?${TESTBASE}.edit.dtype ${RUNCONF} CACHELEVEL=3 && \
	rm ${TESTBASE}
	@${header} Build with both cache and consindices
	@${RUN} ${KNOX} tabletest.scm ${TESTBASE} ${TESTSIZE} \
		${RUNCONF} CACHELEVEL=2 CONSINDEX=yes && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} \
		${RUNCONF} CACHELEVEL=2 CONSINDEX=yes && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} +${TESTBASE}.edit.dtype \
		${RUNCONF} CACHELEVEL=2 CONSINDEX=yes && \
	${RUN} ${KNOX} tabletest.scm ${TESTBASE} ?${TESTBASE}.edit.dtype \
		${RUNCONF} && \
	rm -rf ${TESTBASE} *.edit.dtype
	@${header} "■■■■■■■■ Finished file index tests ${TESTBASE} ${RUNCONF}"

