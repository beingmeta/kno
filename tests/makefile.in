cmdtests:
	@echo "# ■■■■■■■■ Running command line tests ${RUNCONF}"
	@echo "# ■■■ Various stderr log messages or termination warnings are normal"
	make execscripts chainscripts batchscripts chained_batchscripts utilscripts

