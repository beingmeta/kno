# -*- Mode: Javascript; -*-
# Not really, but close enough

server {
    location /knotest {
        include scgi_params;
        scgi_param SCRIPT_FILENAME /src/kno/src/web/qinfo.knocgi;
        scgi_pass localhost:8888;
#           scgi_pass unix:/tmp/scgi.sock;
    }


    location ~ \.knocgi$ {
        include scgi_params;
        fastcgi_split_path_info       ^(.+\.knocgi)(.*)$;
        scgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        scgi_param PATH_INFO $fastcgi_path_info;
        scgi_pass localhost:8888;
#           scgi_pass unix:/tmp/scgi.sock;
    }
# pass PHP scripts to FastCGI server
#
